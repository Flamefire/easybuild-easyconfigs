easyblock = 'PythonBundle'

name = 'Spyder'
version = '5.5.1'

homepage = 'https://github.com/spyder-ide/spyder'
description = """Spyder is an interactive Python development environment providing MATLAB-like features in a simple
 and light-weighted software."""

toolchain = {'name': 'GCCcore', 'version': '12.3.0'}

builddependencies = [
    ('binutils', '2.40'),
    ('maturin', '1.4.0', '-Rust-1.75.0'),
]
dependencies = [
    ('Python', '3.11.3'),
    ('Python-bundle-PyPI', '2023.06'),
    ('BeautifulSoup', '4.12.2'),
    ('cookiecutter', '2.6.0'),
    ('debugpy', '1.6.7.post1'),
    ('dill', '0.3.7'),
    ('IPython', '8.14.0'),
    ('jupyter-server', '2.7.2'),
    ('numpydoc', '1.8.0'),
    ('python-lsp-server', '1.10.1'),
    ('Pylint', '3.0.4'),
    ('PyQt5', '5.15.10'),
    ('PyZMQ', '25.1.1'),
    ('QtPy', '2.4.1'),
    ('Rtree', '1.2.0'),
    ('wurlitzer', '3.1.1'),
]

use_pip = True
sanity_pip_check = True

exts_list = [
    ('pyxdg', '0.28', {
        'modulename': 'xdg',
    }),
    ('inflection', '0.5.1'),
    ('pyls-spyder', '0.4.0'),
    ('textdistance', '4.6.3'),
    ('jellyfish', '1.1.0'),
    ('qtconsole', '5.5.2'),
    ('spyder-kernels', '2.5.0'),
    ('three-merge', '0.1.1'),
    ('watchdog', '5.0.3'),
    ('QDarkStyle', '3.2.3'),
    ('QtAwesome', '1.2.3'),
    ('qstylizer', '0.2.3'),
    ('diff-match-patch', '20230430'),
    (name.lower(), version, {
        'patches': ['Spyder-5.5.1_dont_remove_PYTHONPATH.patch'],
    }),
]

enhance_sanity_check = True
sanity_check_paths = {'files': ['bin/spyder']}

sanity_check_commands = ["spyder --help"]

moduleclass = 'tools'
